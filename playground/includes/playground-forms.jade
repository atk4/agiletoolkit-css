section#forms
  h2 Forms
  h3 Regular Form
  .atk-box.atk-col-6
    form.atk-cells-group.atk-cells-gutter-large.atk-valign-top
      .atk-cells.atk-push
        .atk-cell.atk-text-nowrap
          label.atk-input-label 
            strong Input:
        .atk-cell.atk-jackscrew
          input(type="text",size="9",class="atk-push-xsmall")
          div.atk-text-dimmed.atk-size-milli Some Text
      .atk-cells.atk-push
        .atk-cell.atk-text-nowrap
          label.atk-input-label 
            strong Password:
        .atk-cell.atk-jackscrew
          input(type="password",class="atk-jackscrew atk-push-xsmall")
      .atk-cells.atk-push
        .atk-cell.atk-text-nowrap
          label.atk-input-label
            strong About:
        .atk-cell.atk-jackscrew
          textarea(class="atk-jackscrew")
      .atk-cells
        .atk-cell 
        .atk-cell.atk-actions.atk-jackscrew
          button.atk-button Submit
          button.atk-button Cancel

  h3 Compact Form
  .atk-box.atk-col-6
    form.atk-cells-group.atk-cells-gutter-large
      .atk-cells.atk-push-small
        .atk-cell.atk-text-nowrap
          label.atk-input-label
            strong Input:
        .atk-cell.atk-jackscrew
          input(type="text",size="9")
      .atk-cells.atk-push-small
        .atk-cell.atk-text-nowrap
          label.atk-input-label
            strong Password:
        .atk-cell.atk-jackscrew
          input(type="password",class="atk-jackscrew")
      .atk-cells
        .atk-cell 
        .atk-cell.atk-actions.atk-jackscrew
          button.atk-button Submit
          button.atk-button Cancel
  h3 Stacked Form
  .atk-box.atk-col-6
    form
      .atk-push-xsmall
        label
          strong Input:
      .atk-push
        input(type='text',class='atk-jackscrew')
      .atk-push-xsmall
        label
          strong Password:
      .atk-push
        input(type='password',class='atk-jackscrew')
      .atk-actions
        button.atk-button Okay
        button.atk-button Cancel

  h3 Stacked Compact Form
  .atk-box.atk-col-6
    form
      .atk-push-small
        div.atk-push-small
          label
            strong Input:
        input(type='text',class='atk-jackscrew')
      .atk-push-small.atk-effect-danger
        div.atk-push-xsmall
          label
             strong Password:
        input(type='password',class='atk-jackscrew atk-push-small')
        p
          span.icon-attention
          | &nbsp;This is error
      .atk-actions
        button.atk-button Okay
        button.atk-button Cancel
  h3 Minimal Form
  .atk-box.atk-col-3
    .atk-form.atk-form-stacked.atk-form-compact
      form
        .atk-form-fieldset
          .atk-cells
            .atk-cell
            .atk-cell
              input(type='text', placeholder='Input')
          .atk-cells
            .atk-cell
            .atk-cell
              span.atk-input-icon
                input(type='password', placeholder='Password')
                a.icon-help-circled-1(href='javascript:void(0)')
        .atk-actions
          button.atk-button.atk-jackscrew Okay
